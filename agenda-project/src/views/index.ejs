<!doctype html>
<html lang="en">

<%- include('includes/head') %>

<body class="bg-dark text-white">
    <header>
    <%- include('includes/navbar') %>
    </header>

    <main>
        <div class="container my-3">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8">
                    <h1 class="display-3 text-center">Agenda</h1>
                    <p class="text-center lead mt-2 pricing-item d-flex align-items-center justify-content-center">Your contacts is here<i class="bi bi-arrow-down-short arrow-item fa-5x"></i></p>
                </div>
                
                <div class="responsive-table">
                    <table class="table table-hover text-white">
                        <thead>
                            <tr>
                                <td>Name:</td>
                                <td>Last name:</td>
                                <td>Phone number:</td>
                                <td>E-mail contact</td>
                                <td>Edit</td>
                                <td>Delete</td>
                            </tr>
                        </thead>
                        <thead>
                            <% contacts.forEach(contact => {  %>
                                <tr>
                                    <td><%= contact.name %></td>
                                    <td><%= contact.last_name %></td>
                                    <td><%= contact.phone %></td>
                                    <td><%= contact.email %></td>
                                    <td><a href="/contact/<%= contact.id %>"> <i class="bi bi-pencil-square ms-2"></i></a></td>
                                    <td><a href="/contact/delete/<%= contact.id %>"> <i class="bi bi-trash ms-2"></i></a></td>
                                </tr>
                            <% }) %>
                        </thead>
                    </table>
                </div>
                <div class="col-lg-2"></div>
            </div>
        </div>
    </main>
    
    <footer>
        
    </footer>
 
</body>

</html>
<!doctype html>
<html lang="en">

<%- include('includes/head') %>

<body class="bg-dark text-white">
    <header>
    <%- include('includes/navbar') %>
    </header>

    <main>
        <div class="container d-flex justify-content-center ">
            <div class="col-12 bg-white text-dark text-center p-5 mt-5 border border-2 border-info rounded">
                <%- include('includes/message-required-login') %>
                <div class="d-flex flex-md-row flex-column justify-content-between">
                    <div class="col-md-5">
                        <h2>Register now:</h2>
                        <p>If you don't have an account, please create one using the form below.</p>
                        <%- include('includes/messages') %>
                        <div class="col text-start bg-white rounded text-dark">
                            <form action="/login/register" method="POST">                            
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <span>Email</span>
                                <input title="input" id="email" name="email" type="text" class="form-control mb-2" required>
                                <span>Password</span>
                                <input title="input" id="password" name="password" type="password" class="form-control" required>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-lg btn-info">Create account</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center border-end border-1 "></div>

                    <div class="col-md-5 mt-5 mt-md-0">
                        <h2>Login:</h2>
                        <p>If you have an account please login below</p>
                        <%- include('includes/messages-login') %>
                        <div class="col text-start bg-white rounded text-dark">
                            <form action="/login/" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <span>Email</span>
                                <input title="input" id="email" name="email" type="text" class="form-control mb-2" required> 
                                <span>Password</span>
                                <input title="input" id="password" name="password" type="password" class="form-control" required>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-lg btn-info">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>

               </div>
                
            </div>
        </div>  
    </main>
    
    <footer>
        
    </footer>
 
</body>

</html>
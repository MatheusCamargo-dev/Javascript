<!doctype html>
<html lang="en">

<%- include('includes/head') %>

<body class="bg-dark text-white">
    <header>
    <%- include('includes/navbar') %>
    </header>

    <main>
        <div class="container d-flex justify-content-center ">
            <div class="col-12 bg-white d-flex justify-content-between text-dark text-center p-5 pt-3 mt-5 border border-2 border-info rounded">
                <div class="col-12">
                    <h1 class="mt-0">Contacts</h1>
                    <h3>Create or edit your contacts</h3>
                    <%- include('includes/messages') %>
                    <div class="col-12 text-start d-flex justify-content-center bg-white rounded text-dark m-0">
                        <% if (contact._id) { %>
                            <form action="/contact/update/<%= contact._id %>" method="POST" class="col-6">
                        <% } else { %>    
                            <form action="/contact/register" method="POST" class="col-6">
                        <% } %>    
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <span>Name</span>
                            <input title="input" value="<%= contact.name %>" id="name" name="name" type="text" class="form-control mb-2">
                            <span>Last name</span>
                            <input title="input" value="<%= contact.last_name%>" id="last_name" name="last_name" type="text" class="form-control mb-2">
                            <span>Email:</span>
                            <input title="input" value="<%= contact.email %>" id="email" name="email" type="email" class="form-control">
                            <span>Phone:</span>
                            <input title="input" value="<%= contact.phone %>" id="phone" name="phone" type="tel" class="form-control">
                            <div class="mt-3">
                                <button type="submit" class="btn btn-lg btn-success">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
                
            </div>
        </div>  
    </main>
    
    <footer>
        
    </footer>
 
</body>

</html>